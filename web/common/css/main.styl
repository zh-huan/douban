.header
  width 950px
  margin 0 auto 25px
  div
    display: inline-block;

.header-logo
  width: 160px;
  height: 34px;
  background-image: url("../src/static_img/logo_db.png");
  background-repeat: no-repeat;
  vertical-align top

.header-list
  vertical-align:top
  padding-top:10px;
  li
    display: inline-block;
    margin: 0 0 0 20px;

.link
  display: inline-block;
  zoom: 1;
  width: 40px;
  height: 20px;
  overflow: hidden;
  margin: 0;
  line-height: 20em;
  outline: none;
  vertical-align: middle;
  background-image: url("../src/static_img/anony_nav_logo.png");
  background-repeat: no-repeat;

.header-search
  height: 100%;
  padding: 0 0 0 20px;
  vertical-align: top;
  input
    width: 240px;
    height: 30px;

.link-movie
  background-position: -60px 0;

.link-music
  background-position: -120px 0;

.link-group
  background-position: -180px 0;

.link-events
  background-position: -240px 0;

.link-fm
  background-position: -300px 0;

.link-time
  vertical-align: top;
  background-image: url("../src/static_img/ic_shijian_home_nav.png");

.link-market
  width: 44px;
  background-position: -420px 0;

.reg-new
  height: 304px;
  background-size: contain;
  background-repeat: no-repeat;
  background-color: #edf4ed;
  background-position: -webkit-calc(50% - 305px) top;
  background-position: calc(50% - 305px) top;
  .app
    display inline-block
.wrapper
  position relative
  width 950px
  margin 0 auto
  height 100%

.app
  position absolute
  bottom 121px
  right 300px
  .title
    font-size: 25px;
    padding-bottom: 20px;
  .download
    .app-link
      display: inline-block;
      background: #00b51d;
      color: #fff;
      padding: 8px 14px;
      border-radius: 3px;
      text-decoration: none;
      font-size: 12px;
      vertical-align top
    .erweima
      display inline-block
      width 30px
      height 30px
      background-image url("../src/static_img/icon_qrcode_green.png")
      background-size contain
      cursor: pointer;
      border: 1px solid #48aa0d;

.app-big-erweima
  position: absolute;
  top: -1px;
  left: -1px;
  width: 160px;
  height: 226px;
  padding: 20px 20px 5px;
  background-color: #ffffff;
  border-radius: 4px;
  z-index:1
.app-show-erweima
  display inline-block
  position: relative;
.user-info
  position :absolute
  right :0
  width :270px
.input-login
  position :relative
  width :100%
  padding-top :40px;
.input-login-title
  display :inline-block;
  padding: 6px 35px;
  border-bottom: 1px solid #ececec;
  color :#9b9b9b
  cursor: pointer
.input-login-title.selected
  border-bottom: 1px solid #000;
  color :#000
  font-weight bold
.login-way
  position:absolute
  top:15px
  right :0
  width :28px;
  height :28px;
  background-size:contain
  cursor: pointer
  z-index :1

.login-way.scan
  background-image :url("../src/static_img/erweima.png")
.login-way.input
  background-image :url("../src/static_img/pc.png")
.input-login
  .tip
    color: #9b9b9b;
  a
    color :#41ac52;
    text-decoration: none;
  .right
    text-align :right;
.account-form
  input
    width : 100%
    padding :8px 0;
    text-indent: 8px;
    border : 1px solid #e4e6e5;
    border-radius : 3px
  input:focus
    outline: none;
.account-form_item
  position : relative
  width :100%
  padding-bottom : 8px
  .account-form_iten-getcode
    display : inline-block
    position : absolute
    top:0
    right : 0
    padding : 8px
    color : #41ac52
    cursor : pointer
.account-form_item-phone
  input
    text-indent: 50px;
  .phone-pre
    position :absolute
    top:0
    left: 0
    width 40px
    padding: 8px
    font-weight :bolder
  .phone-pre_value:after
    content: "";
    position: absolute;
    right: 10px;
    top: 5px;
    bottom: 5px;
    width: 0;
    border-right: 1px solid #e4e6e5;
.account-form_submit
  .login-btn
    display: block;
    width: 100%;
    height: 32px;
    line-height: 32px;
    text-align: center;
    background-color: #41ac52;
    color: #ffffff;
    border-radius: 3px;
.login-foot
  padding-top : 10px